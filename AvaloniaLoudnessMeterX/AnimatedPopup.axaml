        <controls:AnimatedPopup>
            <!-- <Button>???</Button> -->
            <StackPanel>
                <Label>??????????</Label>
                <Label>??????????</Label>
                <Label>??????????</Label>
            </StackPanel>
        </controls:AnimatedPopup>
